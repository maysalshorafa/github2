<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <!--<item name="colorPrimaryDark">@color/secondaryDarkColor</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTitleSize">60dp</item>
        <item name="android:windowNoTitle">false</item>

        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TouchPad">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PopUp">
        <item name="android:windowIsTranslucent">true</item>


        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.bt_normal" parent="android:Widget.Button">
        <item name="android:background">@drawable/bt_normal</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#00000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="AppTheme.bt_dark" parent="AppTheme.bt_normal">
        <item name="android:background">@drawable/bt_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="AppTheme.dashboard_bt" parent="AppTheme.bt_dark">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:radius">125dp</item>
        <item name="android:padding">28dp</item>
    </style>

    <style name="AppTheme.bt_green" parent="AppTheme.bt_normal">
        <item name="android:background">@drawable/bt_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.bt_yellow" parent="AppTheme.bt_normal">
        <item name="android:background">@drawable/bt_yellow</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.bt_dangers" parent="AppTheme.bt_normal">
        <item name="android:background">@drawable/bt_dangers</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.calc_tv" parent="android:Widget.TextView">
        <item name="android:background">@drawable/calc_textview_background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.EditText_input" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_style</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textDirection">anyRtl</item>

    </style>

    <style name="AppTheme.EditText_input_2" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_style_2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>

    </style>

    <style name="ActionBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionBarButtonWhite" parent="@style/ActionBarButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBarButtonOffWhite" parent="@style/ActionBarButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SettingsFragmentStyle">
        <item name="android:windowBackground">@color/primaryColor2</item>
    </style>
</resources>
