<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="18sp"
        android:text="@string/user_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textDirection="rtl" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/addUser_ETUserName"
        android:hint="@string/user_name"
        app:layout_constraintLeft_toLeftOf="@+id/guideline18"
        app:layout_constraintRight_toLeftOf="@+id/textView12"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView12"
        android:background="@drawable/edit_text_search" />

    <TextView
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/addUser_ETUserName"
        app:layout_constraintRight_toRightOf="@+id/textView12" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/addUser_ETPassword"
        android:hint="@string/password"
        app:layout_constraintLeft_toLeftOf="@+id/guideline18"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        app:layout_constraintRight_toRightOf="@+id/addUser_ETUserName"
        android:background="@drawable/edit_text_search" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/addUser_ETREPassword"
        android:hint="@string/password"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/addUser_ETPassword"
        app:layout_constraintLeft_toLeftOf="@+id/guideline18"
        app:layout_constraintRight_toRightOf="@+id/addUser_ETPassword"
        android:background="@drawable/edit_text_search" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="872dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="192dp" />

    <Button
        android:text="@string/add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/addUser_BTAdd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/addUser_BTCancel"
        android:layout_marginLeft="8dp"
        android:background="@drawable/btn_primary"
        android:textColor="@color/white"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:text="@android:string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addUser_BTCancel"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_secondary"
        android:textColor="@color/white" />


    <TextView
        android:text="@string/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/addUser_ETREPassword"
        app:layout_constraintRight_toRightOf="@+id/textView13" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/addUser_ETFirstName"
        android:hint="@string/first_name"
        app:layout_constraintRight_toRightOf="@+id/addUser_ETREPassword"
        app:layout_constraintLeft_toLeftOf="@+id/guideline18"
        app:layout_constraintTop_toTopOf="@+id/textView14"
        android:background="@drawable/edit_text_search" />

    <TextView
        android:text="@string/present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/textView17"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/addUser_ETHourlyWage" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/addUser_ETLastName"
        android:hint="@string/last_name"
        app:layout_constraintRight_toRightOf="@+id/addUser_ETFirstName"
        app:layout_constraintLeft_toLeftOf="@+id/guideline18"
        app:layout_constraintTop_toTopOf="@+id/textView15"
        android:background="@drawable/edit_text_search" />

    <TextView
        android:text="@string/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/textView14"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/addUser_ETFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textSize="18sp"
        android:text="@string/hourly_wage"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/addUser_ETPhoneNumber"
        app:layout_constraintRight_toRightOf="@+id/textView19" />

    <TextView
        android:text="@string/phone_number"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/guideline18"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textDirection="rtl"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="@string/permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addUser_TVPermissions"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/textView18"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/addUser_ETPresent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/addUser_ETPresent"
        android:hint="@string/present"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/addUser_ETHourlyWage"
        app:layout_constraintTop_toTopOf="@+id/textView18"
        android:background="@drawable/edit_text_search" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/addUser_ETPhoneNumber"
        android:hint="@string/phone_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView19"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView19"
        android:background="@drawable/edit_text_search" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/addUser_ETHourlyWage"
        android:hint="@string/hourly_wage"
        app:layout_constraintRight_toRightOf="@+id/addUser_ETPhoneNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView17"
        android:background="@drawable/edit_text_search" />

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/addUser_LVPermissions"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/addUser_TVPermissions"
        app:layout_constraintRight_toRightOf="@+id/addUser_TVPermissions"
        app:layout_constraintBottom_toTopOf="@+id/addUser_BTAdd"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>