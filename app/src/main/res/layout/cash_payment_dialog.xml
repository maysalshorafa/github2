<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/background_dark"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <EditText
            android:id="@+id/cashPaymentDialog_TECash"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/catalogproduct_item_bg"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <Switch
            android:id="@+id/cashPaymentDialog_SwitchProportion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proportion"
            android:layout_margin="4dp"
            android:textAlignment="textEnd"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/background_dark"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <ListView
            android:id="@+id/productManagement_LV"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/catalogproduct_item_bg"
        android:weightSum="3"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textColor="@color/black"
                android:textDirection="anyRtl"
                android:textSize="24sp"
                android:layout_weight="1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/TvTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textDirection="anyRtl"
                android:textSize="24sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_gravity="left"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_margin="12dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_after_discount"
                android:textColor="@color/black"
                android:textDirection="anyRtl"
                android:textSize="24sp"
                android:layout_weight="1"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/TvPriceAfterDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textDirection="anyRtl"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="left"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_discount"
                android:textColor="@color/black"
                android:textDirection="anyRtl"
                android:textSize="24sp"
                android:layout_weight="1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/totalDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textDirection="anyRtl"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="left"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        >

        <Button
            android:id="@+id/cashPaymentDialog_BTOk"
            style="@style/AppTheme.bt_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@android:string/ok"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button

            android:id="@+id/cashPaymentDialog_BTCancel"
            style="@style/AppTheme.bt_dangers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@android:string/cancel"
            android:textColor="@color/white"
            android:textSize="18sp" />




    </LinearLayout>



</LinearLayout>
