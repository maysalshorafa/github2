<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView34"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="Offer Name"
        android:textSize="24sp" />

    <TextView
        android:text="@string/offer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView34"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp" />

    <DatePicker
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/datePicker"
        app:layout_constraintRight_toRightOf="@+id/editText"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintLeft_toLeftOf="@+id/guideline40"
        app:layout_constraintBottom_toTopOf="@+id/guideline41"
        android:layout_marginBottom="8dp" />

    <DatePicker
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/datePicker2"
        app:layout_constraintLeft_toLeftOf="@+id/editText"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintRight_toLeftOf="@+id/textView36"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline41"
        android:layout_marginBottom="8dp"
        android:datePickerMode="spinner"
        android:persistentDrawingCache="animation|scrolling|all"
        android:theme="@android:style/Widget.CalendarView" />

    <TextView
        android:text="@string/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView35"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/datePicker"
        app:layout_constraintBottom_toBottomOf="@+id/datePicker"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/datePicker"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="@string/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView36"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/datePicker2"
        app:layout_constraintBottom_toBottomOf="@+id/datePicker2"
        app:layout_constraintRight_toLeftOf="@+id/guideline40"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="888dp"
        android:id="@+id/guideline40"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50915754"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="695dp" />

    <android.support.constraint.Guideline
        android:layout_width="1365dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline41"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50409836"
        tools:layout_editor_absoluteY="448dp"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/spinner"
        app:layout_constraintTop_toTopOf="@+id/guideline41"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toRightOf="@+id/editText"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="@string/rule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView37"
        android:textSize="24sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/spinner" />
</android.support.constraint.ConstraintLayout>