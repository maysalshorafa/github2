<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/inventoryManagementActivityBtnOutDoc"

            style="@style/AppTheme.dashboard_bt"
            android:layout_width="200dp"


            android:layout_height="150dp"
            android:layout_margin="16dp"

            android:padding="16dp"
            android:text="@string/inventory_out"
            android:textColor="@color/white"

            android:textSize="24sp"
            android:textStyle="normal|bold" />
        <Button
            android:id="@+id/inventoryManagementActivityBtnInDoc"
            style="@style/AppTheme.dashboard_bt"
            android:layout_width="200dp"


            android:layout_height="150dp"
            android:layout_margin="16dp"

            android:padding="16dp"
            android:text="@string/inventory_in"
            android:textColor="@color/white"

            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/inventoryManagementActivityProviderBtn"
            style="@style/AppTheme.dashboard_bt"
            android:layout_width="200dp"


            android:layout_height="150dp"
            android:layout_margin="16dp"

            android:padding="16dp"
            android:text="@string/provider"
            android:textColor="@color/white"

            android:textSize="24sp"
            android:textStyle="normal|bold" />


    </LinearLayout>
</LinearLayout>