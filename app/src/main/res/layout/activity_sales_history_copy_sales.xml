<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report_zdetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pos.leaders.leaderspossystem.ReportZDetailsActivity"
    android:padding="8dp"
    android:background="@color/white">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/salesHistory_btPrint"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/salesHistory_ivCopyInvoice"
            />
    </ScrollView>

    <Button
        android:text="@android:string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/salesHistory_btCancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/AppTheme.bt_dangers"
        android:textColor="@color/white" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/salesHistory_btPrint"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/AppTheme.bt_green"
        android:textColor="@color/white"
        android:text="@string/print"
        app:layout_constraintLeft_toRightOf="@+id/reportZDetails_btCancel"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        tools:layout_constraintLeft_creator="1" />





</android.support.constraint.ConstraintLayout>
