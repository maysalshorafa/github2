            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Price"
android:textAlignment="textStart"                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/productName"
                    android:layout_weight="1"
                    android:text="@string/product"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/black"/>


            </LinearLayout>
            <ListView
                android:id="@+id/mainScreen_LVOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:transcriptMode="alwaysScroll" />

            <TextView
                android:id="@+id/mainActivity_tvTotalSaved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/mainActivity_tvTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/saleMan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sales Man "
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/trans_bg_bottom_r"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mainActivity_btnCreditCard"
                    style="@style/AppTheme.bt_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/credit_card" />

                <Button
                    android:id="@+id/mainActivity_btnOtherWays"
                    style="@style/AppTheme.bt_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/other_ways" />

                <Button
                    android:id="@+id/mainActivity_btnCash"
                    style="@style/AppTheme.bt_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/cash" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mainActivity_BTNGeneralProduct"
                    style="@style/AppTheme.bt_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pause" />

                <Button
                    android:id="@+id/mainActivity_BTNMultProduct"
                    style="@style/AppTheme.bt_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/resume" />

                <Button
                    android:id="@+id/mainActivity_BTNPercentProduct"
                    style="@style/AppTheme.bt_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/discount" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/mainActivity_fragmentQuickPricePad">


                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                    >

                        <Button android:id="@+id/mainActivity_btnCancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone" />

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone" />



                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_setting" />

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_customer_history" />

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_customer_file"
                            android:id="@+id/usedPoint"

                            />

                        <ImageButton
                            android:id="@+id/searchPerson"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_customer_plus"
                            android:layout_marginLeft="2dp"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <com.pos.leaders.leaderspossystem.Elements.CustomEditText
                            android:id="@+id/custmer_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:background="@color/white"
                            app:drawableRightCompat="@drawable/ic_icons_leaders_search"

                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingTop="2dp"
                            android:paddingEnd="3dp"
                            android:background="@drawable/catalogproduct_item_bg"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp">

                            <TextView
                                android:id="@+id/textView52"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/Custmername"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/cName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/catalogproduct_item_bg"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp">

                            <TextView
                                android:id="@+id/textView52"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/GroupName"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/cClubName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:background="@drawable/catalogproduct_item_bg"
                            android:orientation="horizontal"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp">

                            <TextView
                                android:id="@+id/textView52"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/Information"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/cInformation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:maxLength="10"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/mainActivity_fragmentTochPad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">


                <ImageButton
                    android:id="@+id/mainActivity_btnList"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    app:srcCompat="@drawable/ic_sort_list"
                    android:layout_gravity="center"/>

                <ImageButton
                    android:id="@+id/mainActivity_btnGrid"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    app:srcCompat="@drawable/ic_sort_grid"
                    android:layout_gravity="center"/>

                <ImageButton
                    android:id="@+id/mainActivity_btnDone"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/done"
                    android:layout_gravity="center"/>


                <com.pos.leaders.leaderspossystem.Elements.CustomEditText
                    android:id="@+id/mainActivity_etSearch"
                    style="@style/AppTheme.EditText_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/search"
                    android:inputType="textPersonName"
                    app:drawableRightCompat="@drawable/ic_icons_leaders_search"
                    android:layout_gravity="center"
                    android:textSize="13dp"
                    android:textAlignment="textEnd"/>

                <Button
                    android:id="@+id/mainActivity_btnDone"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


            </LinearLayout>

            <GridView
                android:id="@+id/mainActivity_gvProducts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:horizontalSpacing="8dp"
                android:verticalSpacing="8dp"
                android:numColumns="2"/>

            <ListView
                android:id="@+id/mainActivity_lvProducts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:horizontalSpacing="8dp"
                android:verticalSpacing="8dp"
                android:visibility="gone"
                android:divider="@android:color/transparent"
                android:dividerHeight="10.0sp"
                />

            <ScrollView
                android:id="@+id/mainActivity_svDepartment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="3">

                <LinearLayout
                    android:id="@+id/mainActivity_LLDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button34"
                            style="@style/AppTheme.bt_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />

                        <Button
                            android:id="@+id/button33"
                            style="@style/AppTheme.bt_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button34"
                            style="@style/AppTheme.bt_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />

                        <Button
                            android:id="@+id/button33"
                            style="@style/AppTheme.bt_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button34"
                            style="@style/AppTheme.bt_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />

                        <Button
                            android:id="@+id/button33"
                            style="@style/AppTheme.bt_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button34"
                            style="@style/AppTheme.bt_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />

                        <Button
                            android:id="@+id/button33"
                            style="@style/AppTheme.bt_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button34"
                            style="@style/AppTheme.bt_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />

                        <Button
                            android:id="@+id/button33"
                            style="@style/AppTheme.bt_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Button" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/mainActivity_navigationView"
        android:layoutDirection="rtl"
        android:fitsSystemWindows="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@layout/main_menu"
        android:background="@color/primaryDarkColor"
        android:layout_gravity="start"
        app:itemTextColor="@color/white">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
