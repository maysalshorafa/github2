<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workerGridView_TVUserName"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView2"

        android:layout_marginRight="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workerGridView_TVFullName"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/workerGridView_TVUserName"
        app:layout_constraintRight_toRightOf="@+id/workerGridView_TVUserName"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workerGridView_TVPhoneNumber"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/workerGridView_TVFullName"
        app:layout_constraintRight_toRightOf="@+id/workerGridView_TVFullName"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workerGridView_TVPresent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/workerGridView_TVPhoneNumber"
        app:layout_constraintRight_toRightOf="@+id/workerGridView_TVPhoneNumber"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView2"
        android:src="@drawable/nobody"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>