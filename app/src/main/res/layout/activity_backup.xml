
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/scrollView1"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center"
        android:layout_marginRight="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:text="@string/backup_products_by_department"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backupActivity_btnDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bt_normal_enabled"
            android:gravity="center"
            android:text="@string/backup_department"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button

            android:id="@+id/backupActivity_btnSystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_cancel"
            android:gravity="center"
            android:text="@string/backup_all_system"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>


    <ListView
        android:id="@+id/backupActivity_lvDepartments"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:textAlignment="center"
        android:textFilterEnabled="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"/>


    <Button

        android:id="@+id/backupActivity_btnCancel"
        android:layout_width="197dp"
        android:gravity="center"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_cancel"
        android:text="@android:string/cancel"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        />

</LinearLayout>




</ScrollView>
