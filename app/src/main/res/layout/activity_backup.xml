<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_backup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pos.leaders.leaderspossystem.BackupActivity"
    android:padding="8dp"
    android:background="@color/backgroundColor">

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="872dp"
        android:id="@+id/guideline17"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="681dp"
        app:layout_constraintGuide_percent="0.5048184" />

    <TextView
        android:text="@string/backup_products_by_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        app:layout_constraintRight_toLeftOf="@+id/guideline17"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <Button
        android:text="@android:string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backupActivity_btnCancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/btn_secondary"
        android:textColor="@color/white" />

    <ListView
        android:layout_height="785dp"
        android:layout_width="681dp"
        android:id="@+id/backupActivity_lvDepartments"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        tools:layout_editor_absoluteY="31dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:text="@string/backup_all_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backupActivity_btnSystem"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/backupActivity_lvDepartments"
        android:background="@drawable/btn_danger"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/backupActivity_btnDepartment"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="@string/backup_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backupActivity_btnDepartment"
        android:background="@drawable/btn_primary"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline17"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
