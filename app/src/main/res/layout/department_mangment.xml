<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button

        android:id="@+id/BTAddDepartment"
        android:text="@string/_new"
        android:layout_width="340dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"

        app:layout_constraintLeft_toRightOf="@+id/departmentActivity_btnCancel"
        android:background="@drawable/bt_green_enabled"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.412"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:textSize="18sp"
        />

    <Button

        android:id="@+id/departmentActivity_btnCancel"
        android:textSize="18sp"

        android:text="@android:string/cancel"
        android:layout_width="340dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_cancel"
        android:textColor="@color/white"
        android:layout_weight="1"   />
    <com.pos.leaders.leaderspossystem.Elements.CustomEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ETdepartmentName"
        android:textSize="18sp"
        android:hint="@string/department_name"
        android:background="@drawable/bubble"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:drawableRightCompat="@drawable/ic_icons_leaders_search"
        />

    <GridView

        android:id="@+id/workerManagement_GVDEpartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnWidth="60dp"
        android:gravity="right"
        android:horizontalSpacing="30dp"
        android:numColumns="8"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="60dp"
        android:verticalSpacing="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="79dp"
        android:layoutDirection="rtl"

        />

</android.support.constraint.ConstraintLayout>