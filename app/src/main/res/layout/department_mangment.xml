<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/BTAddDepartment"
        android:textSize="18sp"
        android:text="@string/add_department"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/departmentActivity_btnCancel"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bt_green_enabled"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.601"
        android:layout_weight="1"
        />

    <Button
        android:text="@android:string/cancel"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_cancel"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:id="@+id/departmentActivity_btnCancel"
        android:textSize="18sp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ETdepartmentName"
        android:textSize="18sp"
        android:hint="@string/department_name"
        android:background="@drawable/edit_text_search"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <GridView

        android:id="@+id/workerManagement_GVDEpartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:gravity="right"
        android:horizontalSpacing="30dp"
        android:numColumns="4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="100dp"
        android:verticalSpacing="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="79dp"
        android:layoutDirection="rtl"
        />

</android.support.constraint.ConstraintLayout>