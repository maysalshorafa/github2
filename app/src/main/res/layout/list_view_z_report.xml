<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layoutDirection="rtl"
android:orientation="horizontal"
android:paddingBottom="10dp"
android:paddingTop="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/listViewItemZReport_tvZID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/guideline38"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/listViewItemZReport_tvZUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/listViewItemZReport_tvZAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        tools:layout_editor_absoluteX="318dp"
        tools:layout_editor_absoluteY="160dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/listViewItemZReport_tvZPosSales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        tools:layout_editor_absoluteX="545dp"
        tools:layout_editor_absoluteY="164dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/listViewItemZReport_tvZCreateDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        tools:layout_editor_absoluteX="512dp"
        tools:layout_editor_absoluteY="401dp"
        android:textSize="18sp"/>

</LinearLayout>
</LinearLayout>