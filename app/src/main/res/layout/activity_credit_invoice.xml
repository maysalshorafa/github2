<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/creditInvoiceManagementActivity_btnByCustomer"
            style="@style/AppTheme.dashboard_bt"
            android:layout_width="200dp"


            android:layout_height="150dp"
            android:layout_margin="16dp"

            android:padding="16dp"
            android:text="@string/customer"
            android:textColor="@color/white"

            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/creditInvoiceManagementActivity_btnByInvoice"
            style="@style/AppTheme.dashboard_bt"
            android:layout_width="200dp"


            android:layout_height="150dp"
            android:layout_margin="16dp"

            android:padding="16dp"
            android:text="@string/invoice"
            android:textColor="@color/white"

            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/creditInvoiceManagementActivity_btnByProduct"
            style="@style/AppTheme.dashboard_bt"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            android:layout_marginRight="15dp"
            android:padding="16dp"
            android:text="@string/product"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="normal|bold"

            />


    </LinearLayout>
    <ListView
        android:id="@+id/creditInvoiceManagementActivity_salesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        />
        </LinearLayout>


</LinearLayout>