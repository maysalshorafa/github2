<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="100dp"
    android:layoutDirection="rtl">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialogImportProducts_tvFileName"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/dialogImportProducts_btBrowse"
        app:layout_constraintRight_toLeftOf="@+id/dialogImportProducts_btBrowse"
        app:layout_constraintBottom_toBottomOf="@+id/dialogImportProducts_btBrowse"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="@string/browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogImportProducts_btBrowse"
        android:background="@drawable/btn_primary"
        android:textColor="@color/white"
        android:textStyle="normal|bold"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogImportProducts_btBrowse"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogImportProducts_tvStatus"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp" />

    <Button
        android:text="@string/save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialogImportProducts_btSave"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:background="@drawable/btn_primary"
        android:textStyle="normal|bold"
        android:textColor="@color/white" />

    <ListView
        android:layout_width="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/dialogImportProducts_tvStatus"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/dialogImportProducts_lvDepartments"
        android:background="@color/white" />

</android.support.constraint.ConstraintLayout>