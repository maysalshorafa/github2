<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rowSaleDetails_TVProductName"
        android:textSize="18sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:text="name"
        app:layout_constraintBottom_toBottomOf="@+id/rowSaleDetails_TVPrice"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/rowSaleDetails_TVPrice"
        android:layout_marginLeft="8dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textDirection="anyRtl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowSaleDetails_TVPrice"
        android:textSize="18sp"
        android:text="132"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView16"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView16"
        android:textAlignment="textEnd"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rowSaleDetails_TVCount"
        android:textSize="18sp"
        android:text="68"
        app:layout_constraintBottom_toBottomOf="@+id/rowSaleDetails_TVTotalPrice"
        app:layout_constraintLeft_toRightOf="@+id/rowSaleDetails_TVTotalPrice"
        android:textAlignment="textStart"
        app:layout_constraintRight_toLeftOf="@+id/textView16"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowSaleDetails_TVTotalPrice"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="4305.54"
        android:textAlignment="textEnd"
        android:textColor="@color/black" />

    <TextView
        android:text="@string/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        app:layout_constraintBottom_toBottomOf="@+id/rowSaleDetails_TVCount"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />


    <LinearLayout
        android:layout_width="752dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/rowSaleDetails_LLMethods"
        android:layout_toStartOf="@+id/rowSaleDetails_LLMethods"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rowSaleDetails_TVPrice"
        android:id="@+id/saleManLayout"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/saleMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:text="Sales Man"
            android:textColor="@color/Black"
            android:textSize="13dp" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rowSaleDetails_LLMethods"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saleManLayout">

        <Button
            android:id="@+id/rowSaleDetails_MethodsDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_danger"
            android:text="@string/delete"
            android:textAppearance="@android:style/TextAppearance" />

        <Button
            android:id="@+id/rowSaleDetails_Dicount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@drawable/btn_primary"
            android:text="%" />

        <Button
            android:id="@+id/rowSaleDetails_MethodsEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/rowSaleDetails_MethodsDelete"
            android:layout_alignBottom="@+id/rowSaleDetails_MethodsDelete"
            android:layout_centerHorizontal="true"
            android:background="@color/secondaryColor"
            android:text="@string/edit" />

        <Button
            android:id="@+id/rowSaleDetails_MethodsPlusOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/rowSaleDetails_MethodsEdit"
            android:layout_toRightOf="@+id/rowSaleDetails_MethodsEdit"
            android:layout_weight="1"
            android:background="@drawable/btn_primary"
            android:text="+1" />

        <Button
            android:id="@+id/rowSaleDetails_MethodsMOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/rowSaleDetails_MethodsEdit"
            android:layout_toStartOf="@+id/rowSaleDetails_MethodsEdit"
            android:layout_weight="1"
            android:background="@drawable/btn_danger"
            android:text="-1" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>