<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@color/backgroundColor"
    android:paddingStart="16dp">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="888dp"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="1093dp"
        app:layout_constraintGuide_percent="0.8098958" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:paddingStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/name" />

    <TextView
        android:text="@string/barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/textView5"/>

    <TextView
        android:text="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/textView6"/>

    <TextView
        android:text="@string/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="216dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/textView7"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ETName"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:background="@drawable/edit_text_search"
        android:hint="@string/name" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ETBarCode"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/ETName"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        android:background="@drawable/edit_text_search"
        android:hint="@string/barcode" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="888dp"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="675dp"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintRight_toRightOf="@+id/textView8"
        android:text="@string/cost_price" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/ETCostPrice"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/ETPrice"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        android:background="@drawable/edit_text_search"
        android:inputType="numberDecimal"
        android:hint="@string/cost_price" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/ETPrice"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/ETDescription"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        android:background="@drawable/edit_text_search"
        android:inputType="numberDecimal"
        android:hint="@string/price" />

    <TextView
        android:text="@string/with_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintRight_toRightOf="@+id/textView9"/>

    <EditText
        android:layout_width="0dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/ETDescription"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/ETBarCode"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        android:background="@drawable/edit_text_search"
        android:layout_height="200dp"
        android:hint="@string/description" />

    <Switch
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/SWWithTax"
        app:layout_constraintLeft_toLeftOf="@+id/ETCostPrice"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <TextView
        android:text="@string/weighable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintRight_toRightOf="@+id/textView10"/>

    <Switch
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/SWWeighable"
        app:layout_constraintLeft_toLeftOf="@+id/SWWithTax"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/textView11" />

    <Button
        android:text="@string/save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/productActivity_btnSave"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/productActivity_btnCancel"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_primary"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/LVDepartment"
        android:text="@string/department_name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="@android:string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productActivity_btnCancel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:background="@drawable/btn_secondary"
        android:textColor="@color/white" />

    <ListView
        android:layout_height="0dp"
        android:id="@+id/LVDepartment"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        android:layout_marginStart="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/productActivity_btnSave"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</android.support.constraint.ConstraintLayout>