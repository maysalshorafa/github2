<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/scrollView1"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@color/white">
<LinearLayout

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="120dp"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="@string/name"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/ETName"
                android:layout_width="500dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bubble"
                android:paddingLeft="5dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="120dp"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="@string/barcode"

                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/ETBarCode"
                android:layout_width="500dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bubble"
                android:paddingLeft="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="120dp"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="@string/description"

                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/ETDescription"
                android:layout_width="500dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bubble"
                android:paddingLeft="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="120dp"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="@string/price"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/ETPrice"
                android:layout_width="500dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bubble"
                android:paddingLeft="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="120dp"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="@string/cost_price"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="500dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bubble"
                android:paddingLeft="5dp"
                android:id="@+id/ETCostPrice"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/with_tax"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/SWWithTax"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="120dp"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="@string/weighable"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <Switch
                android:id="@+id/SWWeighable"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/productActivity_btnSave"
                android:layout_width="200dp"
                android:layout_height="38dp"
                android:layout_gravity="center"

                android:layout_marginLeft="80dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.81"
                android:background="@drawable/bt_green_enabled"
                android:gravity="center"
                android:text="@string/add"
                android:textColor="#fff"
                android:textSize="20dp" />


            <Button

                android:id="@+id/productActivity_btnCancel"
                android:layout_width="197dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_cancel"
                android:gravity="center"
                android:text="@android:string/cancel"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>

    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="200dp"
            android:layout_height="62dp"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:text="@string/department_name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/LVDepartment"
            android:layout_width="200dp"
            android:layout_height="800dp"
            android:textAlignment="center"
            android:textFilterEnabled="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"/>

    </LinearLayout>





</LinearLayout>



</ScrollView>