<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
   >


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1">

        <EditText
            android:id="@+id/EtCreditCardByPhoneCreditCardNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/catalogproduct_item_bg"
            android:inputType="numberSigned"
            android:textAlignment="center" />

    <TextView
        android:id="@+id/creditCardByPhoneCreditCardNo"
        style="@style/AppTheme.bt_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/credit_card_number"
        android:textColor="#fff"
        android:textSize="20dp" />

</LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/EtCreditCardByPhoneCreditCardExpiredDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/catalogproduct_item_bg"
            android:inputType="date"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/creditCardByPhoneCreditCardExpiredDate"
            style="@style/AppTheme.bt_normal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/expired_card"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <EditText
        android:id="@+id/EtCreditCardByPhoneCreditCcv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/catalogproduct_item_bg"
        android:inputType="numberSigned"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/creditCardByPhoneCreditCcv"
        style="@style/AppTheme.bt_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/ccv"
        android:textColor="#fff"
        android:textSize="20dp" />

</LinearLayout>
    <LinearLayout
   android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <EditText
        android:id="@+id/EtCreditCardByPhoneCreditCardId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/catalogproduct_item_bg"
        android:inputType="numberSigned"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/creditCardByPhoneCreditCardId"
        style="@style/AppTheme.bt_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/id"
        android:textColor="#fff"
        android:textSize="20dp" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_done"
            style="@style/AppTheme.bt_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/done"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/AppTheme.bt_dangers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>