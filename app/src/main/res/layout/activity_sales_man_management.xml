<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <GridView
        android:id="@+id/reportManagement_GVSalesMan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:gravity="right"
        android:horizontalSpacing="30dp"
        android:numColumns="4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="60dp"
        android:verticalSpacing="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-19dp"
        android:layoutDirection="rtl" />
    <Button

        android:id="@+id/salesManManagement_BTNewSalesMan"
        android:text="@string/_new"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/salesManManagement_BTCancel"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bt_green_enabled"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.601"
        android:layout_weight="1"/>
     <Button
    android:id="@+id/salesManManagement_BTCancel"
    android:text="@android:string/cancel"
    android:layout_width="300dp"
    android:layout_height="48dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="60dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="16dp"
    android:background="@drawable/btn_cancel"
    android:textColor="@color/white"
    android:layout_weight="1"
    android:layout_marginStart="60dp" />

</android.support.constraint.ConstraintLayout>