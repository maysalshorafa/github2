<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Department Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridViewItemDepartment_TVName"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:text="300 product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridViewItemDepartment_TVCount"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/gridViewItemDepartment_TVName"
        app:layout_constraintLeft_toLeftOf="@+id/gridViewItemDepartment_TVName"
        app:layout_constraintRight_toRightOf="@+id/gridViewItemDepartment_TVName"
        app:layout_constraintHorizontal_bias="0.0"
        />
</android.support.constraint.ConstraintLayout>