<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:weightSum="1">

    <TextView
        android:text="@string/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/userAttendanceReport_ETTo"
        app:layout_constraintBottom_toBottomOf="@+id/userAttendanceReport_ETTo"/>

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="888dp"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="683dp"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:text="@string/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/userAttendanceReport_ETFrom"
        app:layout_constraintTop_toTopOf="@+id/userAttendanceReport_ETFrom"/>

    <android.support.constraint.Guideline
        android:layout_width="1365dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline30"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="89dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.10014728"/>

    <android.support.constraint.Guideline
        android:layout_width="1365dp"
        android:layout_height="0dp"
        android:id="@+id/guideline31"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="806dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.90755206"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userAttendanceReport_TVTotalHourlyWork"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"/>

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline30"
        android:id="@+id/userAttendanceReport_LVReport"
        app:layout_constraintBottom_toTopOf="@+id/guideline31"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/userAttendanceReport_ETTo"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline30"
        android:layout_marginBottom="8dp"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/userAttendanceReport_ETFrom"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/userAttendanceReport_ETTo"
        app:layout_constraintRight_toLeftOf="@+id/textView3"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"/>

</android.support.constraint.ConstraintLayout>