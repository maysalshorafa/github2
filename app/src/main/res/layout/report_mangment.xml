<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="50dp" >

        <Button
            android:id="@+id/reportManagementActivity_btnZ"
            android:layout_width="200dp"
            android:layout_height="150dp"

            android:background="@drawable/dashbord_frame"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/reportManagementActivity_btnZView"
            android:background="@drawable/dashbord_frame"
            android:textColor="@color/white"
            android:padding="16dp"
            android:textStyle="normal|bold"

            android:layout_marginTop="24dp"
            android:textSize="24sp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/reportManagementActivity_btnX"
            android:layout_width="200dp"
            android:layout_height="150dp"

            android:background="@drawable/dashbord_frame"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/reportManagementActivity_btnX"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/dashbord_frame"
            android:padding="16dp"
            android:text="X REPORT VIEW"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="normal|bold"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/reportManagementActivity_btnSaleManagement"
            android:layout_width="200dp"
            android:layout_height="150dp"

            android:background="@drawable/dashbord_frame"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:text="@string/sales_history"/>

        <Button
            android:text="@string/extracting_files"
            android:id="@+id/reportManagementActivity_btnExtractingFiles"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/dashbord_frame"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            />

    </LinearLayout>

</LinearLayout>