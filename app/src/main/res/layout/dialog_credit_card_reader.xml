<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/dialogCreditCardReader_etCardNumber"
        style="@style/AppTheme.EditText_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/form_background_dark"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/dialogCreditCardReader_btOk"
        style="@style/AppTheme.bt_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@android:string/ok" />
</LinearLayout>