<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1024dp"
        android:id="@+id/guideline22"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6666667"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="512dp"/>

    <TextView
        android:text="@string/rule_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/offerRule_TVNAME"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/offerRule_ETName"
        app:layout_constraintLeft_toLeftOf="@+id/guideline23"
        app:layout_constraintRight_toLeftOf="@+id/guideline24"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/offerRule_ETName"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/rule_name"
        app:layout_constraintRight_toLeftOf="@+id/guideline23"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"/>

    <Button
        android:text="@string/add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/offerRule_BTAdd"
        app:layout_constraintLeft_toLeftOf="@+id/guideline23"
        app:layout_constraintRight_toLeftOf="@+id/guideline22"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="1024dp"
        android:id="@+id/guideline23"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="260dp"
        app:layout_constraintGuide_percent="0.33854166"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1024dp"
        android:id="@+id/guideline24"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="384dp"
        app:layout_constraintGuide_percent="0.5"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/offerRule_BTCancel"
        app:layout_constraintRight_toLeftOf="@+id/guideline23"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:text="@android:string/cancel"/>
</android.support.constraint.ConstraintLayout>