<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pos.leaders.leaderspossystem.HomeActivity">


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="root"
        android:ems="10"
        android:id="@+id/ETUserName"
        android:background="@drawable/edit_text_style"
        android:padding="10dp"
        android:hint="User Name"
        app:layout_constraintBottom_toTopOf="@+id/ETPassword"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/ETPassword"
        app:layout_constraintRight_toRightOf="@+id/ETPassword"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="1234"
        android:ems="10"
        android:id="@+id/ETPassword"
        android:password="true"
        android:background="@drawable/edit_text_style"
        android:padding="10dp"
        android:hint="Password"
        app:layout_constraintBottom_toTopOf="@+id/guideline12"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline13"
        app:layout_constraintRight_toLeftOf="@+id/guideline14"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"/>

    <Button
        android:text="@string/log_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        app:layout_constraintLeft_toLeftOf="@+id/guideline15"
        app:layout_constraintRight_toLeftOf="@+id/guideline16"
        app:layout_constraintHorizontal_bias="1.0"
        android:textSize="18sp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toTopOf="@+id/guideline12"
        android:layout_marginTop="8dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1277dp"
        android:id="@+id/guideline11"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="512dp"
        app:layout_constraintGuide_percent="0.5"/>

    <android.support.constraint.Guideline
        android:layout_width="1024dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline12"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="645dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.50509006"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1277dp"
        android:id="@+id/guideline13"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="261dp"
        app:layout_constraintGuide_percent="0.25520834"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1277dp"
        android:id="@+id/guideline14"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="768dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1277dp"
        android:id="@+id/guideline15"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3763021"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="385dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="1277dp"
        android:id="@+id/guideline16"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62369794"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="639dp"/>

    <Button
        android:text="Regester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="780dp"
        android:id="@+id/btReg"
        app:layout_constraintLeft_toLeftOf="@+id/guideline15"
        app:layout_constraintRight_toLeftOf="@+id/guideline16"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"/>

</android.support.constraint.ConstraintLayout>
