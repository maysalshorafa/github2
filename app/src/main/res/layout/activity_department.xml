<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ETdepartmentName"
        android:textSize="18sp"
        android:hint="@string/department_name"
        android:background="@drawable/edit_text_search"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/BTAddDepartment"
        android:textSize="18sp"
        android:text="@string/add_department"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/BTNewDepartment"
        android:layout_marginLeft="16dp"
        android:background="@drawable/btn_primary"
        android:textColor="@color/white" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ETdepartmentName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:layout_width="0dp"
        android:id="@+id/LVDepartment"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/BTAddDepartment"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="@string/_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BTNewDepartment"
        app:layout_constraintLeft_toRightOf="@+id/departmentActivity_btnCancel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_primary"
        android:textColor="@color/white" />

    <Button
        android:text="@android:string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/departmentActivity_btnCancel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/btn_secondary"
        android:textColor="@color/white"
        tools:layout_editor_absoluteY="823dp"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>