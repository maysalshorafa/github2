<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5">

        <TextView
            android:id="@+id/multiCurrenciesFragment_amount"
            android:layout_columnSpan="2"
            android:layout_rowSpan="1"
            android:hint="@string/amount"
            android:textSize="20sp"
            android:gravity="fill"
            android:layout_row="0"
            android:layout_column="0"
            />

        <Spinner
            android:id="@+id/multiCurrenciesFragment_currenciesSpinner"
            android:layout_columnSpan="2"
            android:layout_rowSpan="1"
            android:layout_row="0"
            android:layout_column="2"
            android:gravity="fill"/>

        <Button
            android:id="@+id/multiCurrenciesFragment_bt7"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="7"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center"/>

        <Button
            android:id="@+id/multiCurrenciesFragment_bt8"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="8"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="fill"/>

        <Button
            android:id="@+id/multiCurrenciesFragment_bt9"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="9"

            android:layout_row="1"
            android:layout_column="2"
            android:gravity="fill"/>

        <Button
            android:id="@+id/multiCurrenciesFragment_btCE"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:background="@drawable/back_space"

            android:layout_row="1"
            android:layout_column="3"
            android:gravity="fill"/>

        <Button
            android:id="@+id/multiCurrenciesFragment_bt4"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="4"

            android:layout_row="2"
            android:layout_column="0"
            android:gravity="fill"/>

        <Button
            android:id="@+id/multiCurrenciesFragment_bt5"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="5"

            android:layout_row="2"
            android:layout_column="1"
            android:gravity="fill"/>

        <Button
            android:id="@+id/multiCurrenciesFragment_bt6"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="6"

            android:layout_row="2"
            android:layout_column="2"
            android:gravity="fill"/>

        <Button
            android:id="@+id/multiCurrenciesFragment_btClear"
            style="@style/AppTheme.bt_yellow"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="@string/clear"

            android:layout_row="2"
            android:layout_column="3"
            android:gravity="fill"/>

        <Button
            android:id="@+id/multiCurrenciesFragment_bt1"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="1"

            android:layout_row="3"
            android:layout_column="0"
            android:gravity="fill"/>

        <Button
            android:id="@+id/multiCurrenciesFragment_bt2"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="2"

            android:layout_row="3"
            android:layout_column="1"
            android:gravity="fill"/>

        <Button
            android:id="@+id/multiCurrenciesFragment_bt3"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="3"

            android:layout_row="3"
            android:layout_column="2"
            android:gravity="fill"/>

        <Button
            android:id="@+id/multiCurrenciesFragment_btAddPayment"
            style="@style/AppTheme.bt_green"
            android:layout_columnSpan="1"
            android:layout_row="3"
            android:layout_column="3"
            android:gravity="fill"
            android:layout_rowSpan="2"
            android:text="@string/add_payment" />

        <Button
            android:id="@+id/multiCurrenciesFragment_bt0"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:layout_column="0"
            android:gravity="fill"
            android:layout_rowSpan="1"
            android:text="0"
            />

        <Button
            android:id="@+id/multiCurrenciesFragment_btDot"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="."

            android:layout_row="4"
            android:layout_column="2"
            android:gravity="fill"/>
    </GridLayout>
