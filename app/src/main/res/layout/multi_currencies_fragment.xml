<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/multiCurrenciesFragment_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="@string/amount"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/multiCurrenciesFragment_currenciesSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/multiCurrenciesFragment_bt7"
            style="@style/AppTheme.bt_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_weight="1"
            android:text="7" />

        <Button
            android:id="@+id/multiCurrenciesFragment_bt8"
            style="@style/AppTheme.bt_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:id="@+id/multiCurrenciesFragment_bt9"
            style="@style/AppTheme.bt_normal"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_weight="1"
            android:text="9" />

        <ImageButton
            android:id="@+id/multiCurrenciesFragment_btCE"
            style="@style/AppTheme.bt_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:layout_weight="1"
            android:src="@drawable/back_space" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/multiCurrenciesFragment_bt4"
            style="@style/AppTheme.bt_normal"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4" />

        <Button
            android:id="@+id/multiCurrenciesFragment_bt5"
            style="@style/AppTheme.bt_normal"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5" />

        <Button
            android:id="@+id/multiCurrenciesFragment_bt6"
            style="@style/AppTheme.bt_normal"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6" />

        <Button
            android:id="@+id/multiCurrenciesFragment_btClear"
            style="@style/AppTheme.bt_yellow"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_column="3"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/clear" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/multiCurrenciesFragment_bt1"
                    style="@style/AppTheme.bt_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1" />

                <Button
                    android:id="@+id/multiCurrenciesFragment_bt2"
                    style="@style/AppTheme.bt_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2" />

                <Button
                    android:id="@+id/multiCurrenciesFragment_bt3"
                    style="@style/AppTheme.bt_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/multiCurrenciesFragment_bt0"
                    style="@style/AppTheme.bt_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0" />

                <Button
                    android:id="@+id/multiCurrenciesFragment_btDot"
                    style="@style/AppTheme.bt_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="." />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/multiCurrenciesFragment_btAddPayment"
            style="@style/AppTheme.bt_green"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:onClick="multiCurrenciesConfirmClick"
            android:text="@string/add_payment" />
    </LinearLayout>



</LinearLayout>
