<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDeviceName_listViewRowDevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvDevicePort_listViewRowDevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="port" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDeviceManufacture_listViewRowDevices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="manufacture" />

    <TextView
        android:id="@+id/tvDeviceManufacture2_listViewRowDevices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="other" />
</LinearLayout>